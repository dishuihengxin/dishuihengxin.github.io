{
  "name": "Hugo Tech Blog",
  "short_name": "TechBlog",
  "description": "A modern technical blog built with Hugo featuring cutting-edge web technologies and insights",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#1a1a2e",
  "background_color": "#0f0f23",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
